@model Medicinas.Models.Medicamentos

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Medicamentos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Presentacion" class="control-label"></label>
                <input asp-for="Presentacion" class="form-control" />
                <span asp-validation-for="Presentacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContenidoActual" class="control-label"></label>
                <input asp-for="ContenidoActual" class="form-control" />
                <span asp-validation-for="ContenidoActual" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FrecuenciaDeTomaHr" class="control-label"></label>
                <input asp-for="FrecuenciaDeTomaHr" class="form-control" />
                <span asp-validation-for="FrecuenciaDeTomaHr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CantidadDeToma" class="control-label"></label>
                <input asp-for="CantidadDeToma" class="form-control" />
                <span asp-validation-for="CantidadDeToma" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Caducidad" class="control-label"></label>
                <input asp-for="Caducidad" class="form-control" />
                <span asp-validation-for="Caducidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><input type="button" class="btn btn-danger" value="Volver al listado" /></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
